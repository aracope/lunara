# =======================================================================
# Lunara .env.example
# Copy this file to `.env` and fill in the values for your environment.
# =======================================================================
# Database URL (PostgreSQL connection string)
# Format: postgres://USER:PASSWORD@HOST:PORT/DB_NAME
DB_URL=postgres://username:password@localhost:5432/lunara

# JWT secret for signing/verifying auth tokens
# Use a strong, random string in production!
JWT_SECRET=replace-me-with-a-strong-secret

# CORS allowed origins (comma-separated if multiple)
# Example: http://localhost:5173,http://127.0.0.1:5173
CORS_ORIGIN=http://localhost:5173

# Moon API (3rd-party service: https://ipgeolocation.io)
MOON_API_URL=https://api.ipgeolocation.io/astronomy
MOON_API_KEY=your-moon-api-key

# Tarot API base URL (custom microservice)
# Local dev default: http://localhost:5001
TAROT_API_BASE=http://localhost:5001

# Port the Express server will listen on
PORT=3001
