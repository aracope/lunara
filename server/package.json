{
  "name": "lunara-server",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "test": "dotenv -e .env.test -- cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "dotenv -e .env.test -- cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:cov": "dotenv -e .env.test -- cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "dev": "nodemon --env-file .env src/server.js",
    "db:create": "dotenv -e .env -- sh -c 'createdb lunara || true'",
    "db:schema": "dotenv -e .env -- sh -c 'psql \"$DB_URL\" -f sql/schema.sql'",
    "db:seed": "dotenv -e .env -- sh -c 'psql \"$DB_URL\" -f sql/seed.sql'",
    "db:schema:test": "dotenv -e .env.test -- sh -c 'psql \"${DB_URL:-$DATABASE_URL}\" -v ON_ERROR_STOP=1 -f sql/schema.sql'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns-tz": "^3.2.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "tz-lookup": "^6.1.25",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.1.3",
    "nock": "^14.0.10",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}